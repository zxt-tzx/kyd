{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": true,
    "types": [
      "@cloudflare/workers-types"
    ],
    "paths": {
      "@/core/*": [
        "../core/src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../core"
    }
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "scripts/**/*"
  ]
}
