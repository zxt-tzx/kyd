{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./build",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@/core/*": ["../core/src/*"],
      "@/functions/*": ["../functions/src/*"],
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "../core"
    },
    {
      "path": "../functions"
    }
  ],
  "include": ["./src/**/*", "./sst-env.d.ts", "../../reset.d.ts", "./vite.config.ts" ]
}
